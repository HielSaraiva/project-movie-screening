<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ifce.controller.PrimaryController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label text="Configurar Demonstrador" />
        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <children>
                <Label text="Capacidade (N):" />
                <TextField fx:id="capacidadeField" prefWidth="50.0" />
                <Label text="Tempo Exibição (te):" />
                <TextField fx:id="tempoExibicaoField" prefWidth="50.0" />
                <Button fx:id="iniciarDemoBtn" onAction="#iniciarDemonstrador" text="Iniciar Demonstrador" />
            </children>
        </HBox>
        <Separator prefWidth="200.0" />
        <Label text="Adicionar Fã" />
        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <children>
                <Label text="ID:" />
                <TextField fx:id="fanIdField" prefWidth="80.0" />
                <Label text="Tempo Lanche (tl):" />
                <TextField fx:id="fanTempoLancheField" prefWidth="50.0" />
                <Button fx:id="adicionarFanBtn" disable="true" onAction="#adicionarFan" text="Adicionar Fã" />
            </children>
        </HBox>
        <Separator prefWidth="200.0" />
        <Label text="Log" />
        <TextArea fx:id="logArea" editable="false" prefColumnCount="50" prefRowCount="15" />
    </children>
</VBox>